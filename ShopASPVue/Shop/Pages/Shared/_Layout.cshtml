<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bulma-0.7.5/css/bulma.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Production">
        <link rel="stylesheet" href="~/lib/bulma-0.7.5/css/bulma.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" asp-page="/Index">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-item" asp-controller="Account" asp-action="Logout">
                            <strong>Admin</strong>
                        </a>
                    }
                </a>
                
            </div>

            <div class="navbar-end">               
                <div class="navbar-item">
                    <vc:cart view="Small"></vc:cart>
                    <div class="buttons">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="button is-light" asp-controller="Accounts" asp-action="Logout">
                                <strong>Sign out</strong>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
    </div>
<footer class="footer">
     <div class="content has-text-centered">
          <p>
          Copy rights for Shop ASP with vue and bulma components
              <a asp-page="/Admin/Index">Admin Login</a>
          </p>
     </div>
</footer>



        <environment include="Development">
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("Scripts", required: false)
</body>
</html>
