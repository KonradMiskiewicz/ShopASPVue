@page
@model Shop.Pages.Checkout.CustomerCheckInformationModel
@{
}
    <div class="columns">
        <div class="column is-6">
            <form method="post">
                <div class="field">
                    <p class="control">
                        <label class="label">First name</label>
                        <input class="input" asp-for="CustomerInformation.First_Name" />
                    </p>
                    <span asp-validation-for="CustomerInformation.First_Name"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">Last Name</label>
                        <input class="input" asp-for="CustomerInformation.Last_Name" />
                    </p>
                    <span asp-validation-for="CustomerInformation.Last_Name"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">Phone Number</label>
                        <input class="input" asp-for="CustomerInformation.PhoneNumber" />
                    </p>
                    <span asp-validation-for="CustomerInformation.PhoneNumber"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">Email</label>
                        <input class="input" asp-for="CustomerInformation.Email" />
                    </p>
                    <span asp-validation-for="CustomerInformation.Email"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">Adres 1</label>
                        <input class="input" asp-for="CustomerInformation.Adress1" />
                    </p>
                    <span asp-validation-for="CustomerInformation.Adress1"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">Adres 2</label>
                        <input class="input" asp-for="CustomerInformation.Adress2" />
                    </p>
                    <span asp-validation-for="CustomerInformation.Adress2"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">City</label>
                        <input class="input" asp-for="CustomerInformation.City" />
                    </p>
                    <span asp-validation-for="CustomerInformation.City"></span>
                </div>
                <div class="field">
                    <p class="control">
                        <label class="label">Post Code</label>
                        <input class="input" asp-for="CustomerInformation.PostCode" />
                    </p>
                    <span asp-validation-for="CustomerInformation.PostCode"></span>
                </div>
                <div class="field">
                    <button class="button is-success" type="submit">Submit</button>
                </div>
            </form>
        </div>
        <div class="column is-6">
            <vc:cart view="Default"></vc:cart>
        </div>
    </div>

