<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bulma-0.7.5/css/bulma.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Production">
        <link rel="stylesheet" href="~/lib/bulma-0.7.5/css/bulma.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    <a asp-page="/Admin/Index">Admin</a>
    <a asp-page="/Accounts/Login">Sign In</a>
    <a asp-controller="Accounts" asp-action="Logout">Sign out</a>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Shop</p>
        </footer>
    </div>


    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
